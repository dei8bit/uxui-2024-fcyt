<style>
  article {
    display: flex;
    flex-direction: column;
    align-items: start;
  }

  ul > li:hover {
    filter: drop-shadow(0px 0px 10px #010914);
  }

  li {
    justify-content: space-between;
    width: 110vh;
  }

  h2::first-letter {
    color: var(--secondary);
  }
  a{
    text-decoration: none;
  }
</style>